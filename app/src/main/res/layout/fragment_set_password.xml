<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_set_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_regular"
        android:textSize="@dimen/text_size_largest"
        app:layout_constraintBottom_toTopOf="@id/tv_set_password_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="제목입니다" />

    <TextView
        android:id="@+id/tv_set_password_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toTopOf="@id/layout_dot_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_set_password_title"
        tools:text="자세한 설명입니다" />

    <LinearLayout
        android:id="@+id/layout_dot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/layout_input_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_set_password_title">

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/deco_marker_circle_gray" />

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/deco_marker_circle_gray" />

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/deco_marker_circle_gray" />

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/deco_marker_circle_gray" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/btn_1"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:text="1"
            app:layout_constraintEnd_toStartOf="@id/btn_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_2"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:text="2"
            app:layout_constraintEnd_toStartOf="@id/btn_3"
            app:layout_constraintStart_toEndOf="@id/btn_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_3"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:text="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_4"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:text="4"
            app:layout_constraintEnd_toStartOf="@id/btn_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_1" />

        <TextView
            android:id="@+id/btn_5"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:text="5"
            app:layout_constraintEnd_toStartOf="@id/btn_6"
            app:layout_constraintStart_toEndOf="@id/btn_4"
            app:layout_constraintTop_toBottomOf="@id/btn_2" />

        <TextView
            android:id="@+id/btn_6"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:text="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_5"
            app:layout_constraintTop_toBottomOf="@id/btn_3" />

        <TextView
            android:id="@+id/btn_7"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:text="7"
            app:layout_constraintEnd_toStartOf="@id/btn_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_4" />

        <TextView
            android:id="@+id/btn_8"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:text="8"
            app:layout_constraintEnd_toStartOf="@id/btn_9"
            app:layout_constraintStart_toEndOf="@id/btn_7"
            app:layout_constraintTop_toBottomOf="@id/btn_5" />

        <TextView
            android:id="@+id/btn_9"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:text="9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_8"
            app:layout_constraintTop_toBottomOf="@id/btn_6" />

        <TextView
            android:id="@+id/btn_0"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:layout_constraintStart_toStartOf="@id/btn_8"
            app:layout_constraintTop_toBottomOf="@id/btn_7" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@id/btn_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/btn_9"
            app:layout_constraintTop_toTopOf="@id/btn_0">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>