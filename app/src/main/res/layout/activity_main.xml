<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="@string/ask_today_condition"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@id/sb_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/sb_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="20" />

    <com.lukelorusso.verticalseekbar.VerticalSeekBar
        android:id="@+id/sb_light"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:vsb_bar_background="@android:color/darker_gray"
        app:vsb_bar_progress_gradient_end="@android:color/darker_gray"
        app:vsb_bar_progress_gradient_start="@android:color/darker_gray"
        app:vsb_bar_width="0dp"
        app:vsb_max_value="20"
        app:vsb_progress="0"
        app:vsb_show_thumb="true"
        app:vsb_thumb_container_corner_radius="90dp" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/sb_light"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/sb_light"/>-->


</androidx.constraintlayout.widget.ConstraintLayout>