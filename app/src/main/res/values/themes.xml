<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BDProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Recycler View -->
        <item name="android:colorEdgeEffect">@color/color_yellow</item>

        <!-- Font Style -->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="android:checkboxStyle">@style/CheckboxStyle</item>
    </style>

    <style name="Theme.BDProject.Splash" parent="Theme.BDProject">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/color_yellow</item>
    </style>

    <style name="Theme.BDProject.FullSize" parent="Theme.BDProject">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Font Style -->
    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EditTextForDarkStyle">
        <item name="colorSecondary">@color/white</item>
        <!--<item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/white</item>-->
    </style>

    <style name="EditTextForBrightStyle">
        <item name="colorSecondary">@color/black</item>
        <!--<item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorControlNormal">@color/black</item>-->
    </style>

    <style name="EditTextForYellowStyle">
        <item name="colorSecondary">@color/color_yellow</item>
        <!--<item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/white</item>-->
    </style>

    <style name="SwitchRipple">
        <item name="colorSecondary">@color/color_yellow</item>
    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Chip Text Style -->
    <style name="ChipTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Material Button -->
    <style name="MyMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">#C4C4C4</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbarTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/toolbar_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/noto_regular</item>
    </style>

    <style name="NumberButtonStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">78dp</item>
        <item name="android:textSize">@dimen/text_size_largest</item>
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>