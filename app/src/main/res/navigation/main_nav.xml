<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainNavigation"
    app:startDestination="@id/controlBrightnessFragment">

    <fragment
        android:id="@+id/controlBrightnessFragment"
        android:name="com.bd.bdproject.view.fragment.ControlBrightnessFragment"
        tools:layout="@layout/fragment_control_brightness">
        <action
            android:id="@+id/action_addLightFragment_to_addTagFragment"
            app:destination="@id/controlTagFragment" />
        <argument
            android:name="light"
            app:argType="com.bd.bdproject.data.model.Light"
            android:defaultValue="@null"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/controlTagFragment"
        android:name="com.bd.bdproject.view.fragment.ControlTagFragment"
        tools:layout="@layout/fragment_control_tag">
        <action
            android:id="@+id/action_addTagFragment_to_addMemoFragment"
            app:destination="@id/controlMemoFragment" />
        <argument
            android:name="light"
            app:argType="com.bd.bdproject.data.model.Light"
            android:defaultValue="@null"
            app:nullable="true"/>
        <argument
            android:name="tags"
            app:argType="com.bd.bdproject.data.model.Tags"
            android:defaultValue="@null"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/controlMemoFragment"
        android:name="com.bd.bdproject.view.fragment.ControlMemoFragment"
        tools:layout="@layout/fragment_control_memo">
        <argument
            android:name="light"
            app:argType="com.bd.bdproject.data.model.Light"
            android:defaultValue="@null"
            app:nullable="true"/>
    </fragment>

    <!--<action
        android:id="@+id/action_global_lightDetailFragment"
        app:destination="@id/lightDetailFragment"
        app:popUpTo="@id/lightDetailFragment"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/action_global_addLightFragment"
        app:destination="@id/addLightFragment"
        app:popUpTo="@id/lightDetailFragment"
        app:popUpToInclusive="true" />-->
</navigation>